LIBS    =\
	-lncurses \
	`pkg-config --libs ao` \
	`pkg-config --libs sndfile` \
	`pkg-config --libs fftw3` \
	`pkg-config --libs samplerate` \
	-lm

CFLAGS  =\
	-Wall -O3 \
	`pkg-config --cflags ao` \
	`pkg-config --cflags sndfile` \
	`pkg-config --cflags fftw3` \
	`pkg-config --cflags samplerate`

LDFLAGS      = 

CC	= cc
LD	= $(CC)
RM	= rm -f


all:	pv

OBJ = \
	pv.o \
	pv-complex.o \
	pv-conventional.o \
	pv-ellis.o \
	pv-freq.o \
	pv-loose-lock.o \
	pv-complex-curses.o \
	hc.o \
	fft.o \
	snd.o \
	ao-wrapper.o


pv:	$(OBJ)
	$(LD) $(LDFLAGS) -o pv $(OBJ) $(LIBS)

clean:
	$(RM) *.o

distclean:
	$(RM) pv *.o
