LIBS    =\
 `pkg-config --libs gtk+-2.0` \
 -lao \
 -lfftw3 \
 -lsndfile \
 -lm

CFLAGS  =\
 -Wall -O3 \
 `pkg-config --cflags gtk+-2.0`

LDFLAGS      = 

CC           = cc
LD           = $(CC)
RM           = rm -f


all:	gwaon

OBJ = gwaon.o \
	gwaon-menu.o \
	gwaon-about.o \
	gwaon-wav.o \
	gwaon-esd.o \
	ao-wrapper.o \
	gwaon-pv.o \
	gtk-color.o \
	snd.o \
	hc.o \
	fft.o \
	midi.o

gwaon:	$(OBJ)
	$(LD) $(LDFLAGS) -o gwaon $(OBJ) $(LIBS)

clean:
	$(RM) *.o

distclean:
	$(RM) gwaon *.o
